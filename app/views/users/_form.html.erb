<div class="container">
  <%= render "shared/errors", obj: @user %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, url: signup_path, class:"shadow p-3 mb-3 bg-info rounded", data: { turbo: false }, local: true) do |f| %>
        <div class="form-group mb-3 row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder:"Enter a user name" %>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email address" %>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Choose a password" %>
          </div>
        </div>

        <div class="form-group d-flex justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>
      <% end %>
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "d-flex justify-content-center mb-3 text-info" %>
  </div>
</div>